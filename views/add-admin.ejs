<%- include('layouts/header.ejs') %>
<%- include('layouts/admin-nav.ejs') %>
<div id="page_content">
    <div id="page_content_inner">
        <div class="md-card">
            <div class="md-card-content">
                <h3 class="heading_a">Add Admin</h3>
            <form onsubmit="return false;" id="form">
                <div class="alert alert-success mt-2" role="alert" id="success" style="display: none;">
                       
                </div>
                <div class="alert alert-danger mt-2" role="alert" id="failed" style="display: none;">
                 
                </div>
                <div class="row mt-5">
                    <div class="col-md-4 mb-5">
                        <div class="">
                            <label>Name</label>
                            <input type="text" class="md-input label-fixed" id="admin_name" required/>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <div class="">
                            <label>Phone Number</label>
                            <input type="text" class="md-input label-fixed" id="phone" required/>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <div class="">
                            <label>Email</label>
                            <input type="email" class="md-input label-fixed" id="email" required/>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <div class="">
                            <label>Password</label>
                            <input type="password" class="md-input label-fixed" id="password" required/>
                        </div>
                        <p style="color:red;display: none;" id="password-error"></p>
                    </div>
                    <div class="col-md-4 mb-5">
                        <div class="">
                            <label>Confirm Password</label>
                            <input type="password" class="md-input label-fixed" id="confirm_password" required/>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light" >Add Admin</button>
                    </div>
                   
                </div>
            </form>
            </div>
        </div>
    </div>
</div>
<script src="custom-js/admin-add.js"></script>
<%- include('layouts/footer.ejs') %>